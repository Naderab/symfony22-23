{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
<div class="row">
<div class="col-md-4">
        <a class="btn btn-primary" href="{{path('add_classroom')}}">Add new classroom</a>

</div>
</div>
<div class="row">
    <table class="table table-striped" >
    <thead>
    <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Students</th>
    </tr>
    </thead>
    <tbody>
    {% for c in classrooms %}
    <tr>
    <td>{{c.id}}</td>
    <td>{{c.name}}</td>
    <td>
    <ul>
    {% for s in c.students %}
    <li> {{s.userName}}</li>
    {% endfor %}
    </ul>
    </td>
    <td><a href="{{path('update_classroom',{'id':c.id})}}">Update</a></td>
    <td><a href="{{path('remove_classroom',{'id':c.id})}}">Delete</a></td> 
    </tr>
    {% endfor %}
    </tbody>
    </table>
    </div>
</div>
{% endblock %}
